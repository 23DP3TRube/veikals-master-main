<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="288.0" prefWidth="523.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tr.rvt.LoginController">
    <children>
        <Label text="Username" />
        <TextField fx:id="usernameField" styleClass="TextField" />
        <Label text="Password" />
        <TextField fx:id="passwordField" styleClass="TextField" />
        <Button onAction="#handleLogin" text="Login" />
        <Button onAction="#handleBack" text="Back" />
    </children>
</VBox>
