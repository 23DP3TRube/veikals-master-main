<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>



<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tr.rvt.LoginController">
    <children>
        <Label text="Username"/>
        <TextField fx:id="usernameField" styleClass="TextField"/>
        <Label text="Password"/>
        <TextField fx:id="passwordField" styleClass="TextField"/>
        <Button text="Login" onAction="#handleLogin"/>
        <Button text="Back" onAction="#handleBack"/>
    </children>
</VBox>